@model StudentRegistrationLogin.Models.Department
@Html.Partial("_AdminLayoutHeader")
@{
    ViewBag.Title = "Create";
    Layout = null;
}
<html>
<head>

</head>
<body class="hold-transition login-page">
    <div class="login-box" style="max-width:500px;margin:auto;">
        <div class="card card-outline card-primary">
            <div>
                <div class="card-header text-center">
                    <a class="h1"><b>Create Department</b></a>
                </div>
                <div class="card-body">
                    <p class="login-box-msg">Create Department For hospital</p>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()


                        <div class="form-group">
                            @Html.HiddenFor(model => model.DepartmentID, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.HiddenFor(model => model.DepartmentID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DepartmentID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Department Name" } })

                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Save</button>
                        </div>
                    }
                </div>
            </div>


            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</body>
</html>
@Html.Partial("_AdminLayoutFooter")