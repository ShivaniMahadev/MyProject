@model StudentRegistrationLogin.Models.DoctorSpeciality
@Html.Partial("_AdminLayoutHeader")

    @{
        ViewBag.Title = "Delete";
        Layout = null;
    }

    <div class="login-box" style="max-width:500px;margin:auto;">
        <div class="card card-outline card-primary">
            <div class="form-horizontal">
                <div class="card-header text-center">
                    <a class="h1"><b>Delete Doctor Specialty</b></a>
                </div>
                <div class="card-body">
                    <p class="login-box-msg">Are you sure you want to delete this?</p>

                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.DoctorName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.DoctorName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.SpecialityName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.SpecialityName)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <button class="btn btn-info" style="color:white">@Html.ActionLink("Cancel", "Index", null, new { @Style = "color:white" })</button>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_AdminLayoutFooter")
