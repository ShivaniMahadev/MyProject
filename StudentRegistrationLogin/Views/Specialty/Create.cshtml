@model StudentRegistrationLogin.Models.Specialty
@Html.Partial("_AdminLayoutHeader")
@{
    ViewBag.Title = "Create";
    Layout = null;
}
<html>
<head>

</head>
<body class="hold-transition login-page">
    <div class="login-box" style="max-width:500px;margin:auto;">
        <div class="card card-outline card-primary">
            <div>
                <div class="card-header text-center">
                    <h1><b>Create Specialty</b></h1>                    
                </div>
                <div class="card-body">
                    <p class="login-box-msg">Create Specialty For Doctors</p>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.HiddenFor(model => model.SpecialtyID, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.HiddenFor(model => model.SpecialtyID, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SpecialtyID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                @Html.EditorFor(model => model.SpecialtyName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Specialty Name" } })

                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-user"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                @Html.ValidationMessageFor(model => model.SpecialtyName, "", new { @class = "text-danger" })
                            </div>


                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block">Save</button>
                            </div>
                        </div>
                    }

                </div>
            </div>


            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</body>
</html>

@Html.Partial("_AdminLayoutFooter")