@model StudentRegistrationLogin.Models.Specialty
@Html.Partial("_AdminLayoutHeader")
@{
    ViewBag.Title = "Edit";
    Layout = null;
}

<div class="login-box" style="max-width:500px;margin:auto;">
    <div class="card card-outline card-primary">


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="card-header text-center">
                    <h1><b>Edit Specialty</b></h1>
                </div>
                <div class="card-body">
                    <p class="login-box-msg">Edit your Speciality</p>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.SpecialtyID)

                    <div class="form-group">
                        @Html.Label("Specialty Name", htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SpecialtyName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SpecialtyName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(model => model.CreatedDateUtc, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.HiddenFor(model => model.CreatedDateUtc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CreatedDateUtc, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block">Update</button>
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
@Html.Partial("_AdminLayoutFooter")